

   
       <!-- Used to set the CSS formating for the step banners -->
  		 <% @step = 1 %>
  		   		 
		 <!-- Begin Left Column -->
		 <div id="leftcolumn">
		 <h3 class="options select">1) Enter your information</h3>
    <div id="letter_options">
        <%= form_tag(letter_path, :method =>'get', :multipart => true) do %>       

        <p>
          <div class="field">
          <%= label_tag(:name, "Name", :class => "label")%>
          <%= text_field_tag(:name, @name, :class => "fieldset", :value => "Jane Doe") %>
          </div>
        </p>

        <p>
          <div class="field">
          <%= label_tag(:street_address, "Address", :class => "label")%>
          <%= text_field_tag(:street_address, @street_address, :class => "fieldset", :value => "2101 Waverley St") %>
          </div>
        </p>

        <p>
          <div class="field">
          <%= label_tag(:city, "City", :class => "label")%>
          <%= text_field_tag(:city, @city, :class => "fieldset", :value => "Palo Alto") %>
          </div>
        </p>

        <p>
          <div class="field">
          <%= label_tag(:state, "State", :class => "label")%>
          <%= text_field_tag(:state, @state, :class => "fieldset", :value => "CA") %>
          </div>
        </p>

        <p>
          <div class="clear">
          <%= label_tag(:zipcode, "Zipcode", :class => "label")%>
          <%= text_field_tag(:zipcode, @zipcode, :class => "fieldset", :value => "94301") %>
          </div>
        </p>
		</div>  
    
    
     <p>
     <div class="actions">
     <%= submit_tag("2) Customize Letter", :class => "fieldset button") %>
     </div>
     </p>
     <% end %>
     
     <div class="steps valid_address">
     Please enter a valid address.  Entering an invalid address will cause an error.
     </div>
          
     </div>
		 
			
		 <!-- End Left Column -->
		 
		 <!-- Begin Right Column -->
		 <div id="rightcolumn" style="background-color:#eeeeee;">
    
  	    <h2>WriteGreen makes it easy to write to congress about climate change.</h2>
  	    <h3>Your representatives will take notice.</h3>
  
     		<div class="spacer">
   			<div class="stepborder highlighted">
   			 <div class="steps selected">
	  		   <h2 style="text-align:left"> 1) Enter your information </h2>
         </div>         			  

      
      	<div class="steps instructions" > 
      	Your information will be used to match you with your congressional representatives.       	    	
      	</div>
      	</div> 
      	
      	<div class="stepborder unhighlighted">
      	 <div class="steps" >
	  		   <h2 style="text-align:left"> 2) Customize your letter  </h2>
         </div>  			  

      	<div class="steps instructions" > 
      	Select from the options for recipient, emphasis, perspective, etc.       	    	
      	</div>
      	</div>

      	<div class="stepborder unhighlighted">      	
      	<div class="steps" >
	  		   <h2 style="text-align:left"> 3) Edit your letter </h2>
         </div>  			  

      	<div class="steps instructions" > 
      	WriteGreen helps you get started, but the real power is in telling your unique story.       	    	
      	</div>
      	</div>
      	</div>
       


      	
      	
     </div>
		 <!-- End Right Column -->
		 
		
		
   


   
   


