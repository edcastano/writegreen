<h3> These are your congress people</h3>
  <% @sen_senator = 'Senator '+@senior_senator.firstname + " " + @senior_senator.lastname %><br />
  <% @jun_senator = 'Senator '+@junior_senator.firstname + " " + @junior_senator.lastname%><br />
  <% @rep = 'Representative '+@representative.firstname + " " + @representative.lastname %><br />
  <% if @recipient == nil %>
  <% @recipient = "REPS" %>    
  <% else %>
  <%= @recipient %>
  <% end %>
  <%-# "Here is the " + @emphasis %>
  
  
<div id="formcontainer">
        <div id="main_content">
        <%= form_tag(letter_path, :method =>'get', :multipart => true) do %>

        <p>
          <div class="field">
          <%= label_tag(:name, "Name", :class => "label")%>
          <%= text_field_tag(:name, @name, :class => "fieldset") %>
          </div>
        </p>




  <%-#@street_address = params[:street_address]
  #@city = params[:city]
  #@state = params[:state]
  #@zipcode%>

        <p>
          <div class="field">
          <%= label_tag(:street_address, "Address", :class => "label")%>
          <%= text_field_tag(:street_address, @street_address, :class => "fieldset") %>
          </div>
        </p>

        <p>
          <div class="field">
          <%= label_tag(:city, "City", :class => "label")%>
          <%= text_field_tag(:city, @city, :class => "fieldset") %>
          </div>
        </p>

        <p>
          <div class="field">
          <%= label_tag(:state, "State", :class => "label")%>
          <%= text_field_tag(:state, @state, :class => "fieldset") %>
          </div>
        </p>

        <p>
          <div class="field">
          <%= label_tag(:zipcode, "Zipcode", :class => "label")%>
          <%= text_field_tag(:zipcode, @zipcode, :class => "fieldset") %>
          </div>
        </p>


        <p>
          <div class="field">
          <%= label_tag(:recipient, "Recipient", :class => "label")%>
          <%= select_tag(:recipient, options_for_select([@sen_senator,@jun_senator, @rep]),
                         :class => "fieldset") %>
          </div>
        </p>


        <p>
          <div class="field">
          <%= label_tag(:emphasis, "Emphasis", :class => "label")%>
          <%= select_tag(:emphasis, options_for_select([['Risk/Personal Values', 'RiskValues'],
          ['Economic Security', 'Econ'],
          ['Health & Pollution', 'FamPollute'],
          ['American Values', 'AmericanVal'],
          ['Common sense', 'CommonSense']]), :class => "fieldset") %>
          </div>
        </p>
          <div class="field">
          <%= label_tag(:ideology, "Perspective", :class => "label") %>
          <%= select_tag(:ideology, options_for_select([['Liberal', 'Liberal'],
          ['Conservative', 'Conservative'],
          ['Moderate', 'Moderate']]), :class => "fieldset") %>
          </div>

          <div class="field">
          <%= label_tag(:religion, "Religion", :class => "label") %>
          <%= select_tag(:religion, options_for_select([['Secular', 'Secular'],
          ['Christian', 'Christian']]), :class => "fieldset") %>
          </div>

          <div class="field">
          <%= label_tag(:geography, "Geography", :class => "label") %>
          <%= select_tag(:geography, options_for_select([['California', 'California'],
          ['Other', 'Other']]), :class => "fieldset") %>
          </div>
          <p>
          <div class="actions">
            <%= submit_tag("Create letter", :class => "fieldset button") %>
          </div>
          </p>
        <% end %>
        </div>
</div>


<div id="lettercontainer">
<%= image_tag("writegreenlogo.jpg", :size => "300x67") %>
<p id="notice"><%= notice %></p>
<p> <%= "Dear " + "hot dog" + ","%></p>
 <p><%= getparagraph(@emphasis, "emphasis")%></p>
 <p><%= getparagraph(@ideologyKey, "ideology")%></p>
 <% if @geography != "Other" %>
   <p>
     <%= getparagraph(@geography, "geography") %>
   </p>
 <% end %>
 <p><%= "Sincerely," %></p>
 <%= @name %><br />
 <%= @street_address %><br />
 <%= @city + ", " + @state + " " + @zipcode%><br />

 <%= @address %>


<%= link_to 'Change letter', new_letter_path %>

</div>



 

