<h1>Listing letters</h1>

<table>
  <tr>
    <th>Address</th>
    <th>Greeting</th>
    <th>Emphasis</th>
    <th>Ideology</th>
    <th>Geography</th>
    <th>Closing</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @letters.each do |letter| %>
  <tr>
    <td><%= letter.address %></td>
    <td><%= letter.greeting %></td>
    <td><%= letter.emphasis %></td>
    <td><%= letter.ideology %></td>
    <td><%= letter.geography %></td>
    <td><%= letter.closing %></td>
    <td><%= link_to 'Show', letter %></td>
    <td><%= link_to 'Edit', edit_letter_path(letter) %></td>
    <td><%= link_to 'Destroy', letter, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

