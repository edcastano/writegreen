.clear {
  clear: both;
  height: 0;
  overflow: hidden; 
}

.button {    
   text-align: center;
   border-top: 1px solid #a8e3b7;
   background: #c8edbd;
   background: -webkit-gradient(linear, left top, left bottom, from(#8ec15b), to(#c8edbd));
   background: -webkit-linear-gradient(top, #8ec15b, #c8edbd);
   background: -moz-linear-gradient(top, #8ec15b, #c8edbd);
   background: -ms-linear-gradient(top, #8ec15b, #c8edbd);
   background: -o-linear-gradient(top, #8ec15b, #c8edbd);
   padding: 7.5px 15px;
   -webkit-border-radius: 10px;
   -moz-border-radius: 10px;
   border-radius: 10px;
   -webkit-box-shadow: rgba(0,0,0,1) 0 1px 0;
   -moz-box-shadow: rgba(0,0,0,1) 0 1px 0;
   box-shadow: rgba(0,0,0,1) 0 1px 0;
   text-shadow: rgba(0,0,0,.4) 0 1px 0;
   color: #0f1f0e;
   font-size: 17px;
   font-family: Georgia, Serif;
   font-style: bold; 
   text-decoration: none;
   vertical-align: middle;      
   }
.button:hover {
   border-top-color: #8ec15b;
   background: #8ec15b;
   color: #ffffff;
   }
.button:active {
   border-top-color: #c8edbd;
   background: #c8edbd;
   }

.label {
  float:left;
  clear: both;
  font-size:1em;
  font-weight:bold;
  margin-bottom:0;
  margin-left:0;
  margin-right:0;
  margin-top:1em;
  width:5em;
}

.fieldset{
  float: right;  
  width: 150px;
  margin: 1em 0px 0px 0px;
}

#main_content {
  margin: 0px auto; 
  width: 300px;
  text-align: left;
  float: left;
}

#lettercontainer {
  width: 75%;
  /*height: auto;*/
  margin: 0 auto;
  background-color: #FFF;
  padding: 20px 40px;
  border: solid 2px black;
  margin-top: 20px;
  border-radius: 15px;
}

#formcontainer {
  width: 75%;
  height: 400px;
  margin: 0 auto;
  background-color: #FFF;
  padding: 20px 40px;
  border: solid 2px black;
  margin-top: 20px;
  border-radius: 15px;
}




#footer {
float: center;
clear: both; 
padding: 2em 0px 0px 0px; 
font-weight: bold; 
text-align: left; 
font-size: 0.8em;
}


#flash_notice, #flash_error, #flash_alert {
  padding: 5px 8px;
  margin: 10px 0;
}

#flash_notice {
  background-color: #CFC;
  border: solid 1px #6C6;
}

#flash_error, #flash_alert {
  background-color: #FCC;
  border: solid 1px #C66;
}

.fieldWithErrors {
  display: inline;
}

.error_messages {
  width: 400px;
  border: 2px solid #CF0000;
  padding: 0px;
  padding-bottom: 12px;
  margin-bottom: 20px;
  background-color: #f0f0f0;
  font-size: 12px;
}

.error_messages h2 {
  text-align: left;
  font-weight: bold;
  padding: 5px 10px;
  font-size: 12px;
  margin: 0;
  background-color: #c00;
  color: #fff;
}

.error_messages p {
  margin: 8px 10px;
}

.error_messages ul {
  margin: 0;
}

